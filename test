from flask import Flask
import random


app = Flask(__name__)

nombres = ["Alice", "Bob", "Charlie", "Diana", "Eve"]
facts_list = ["Elon Musk afirma que las redes sociales están diseñadas para mantenernos dentro de la plataforma, de modo que pasemos el mayor tiempo posible viendo contenidos.", 
            "Según un estudio realizado en 2018, más del 50% de las personas de entre 18 y 34 años se consideran dependientes de sus smartphones.", 
            "Las redes sociales tienen aspectos positivos y negativos, y debemos ser conscientes de ambos cuando utilicemos estas plataformas.", 
            "El estudio de la dependencia tecnológica es una de las áreas más relevantes de la investigación científica moderna."]
coinflip = [1, 2]

@app.route("/")
def hello_world():
    return f'<h1>Hello, {random.choice(nombres)} como estas</h1><a href="/fact">¡Ver un dato aleatorio!</a>'
    
@app.route("/fact")
def fact():
    return f'<h1>Did you know? {random.choice(facts_list)}</h1>'

@app.route("/secret")
def coinflip():
    random.choice(coinflip)
    if coinflip == 1:
        return f'<h1>You got Heads'
    elif coinflip == 2:
        return f'<h1>You got Tails'


app.run(debug=True)
